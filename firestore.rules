rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if the user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Match the user-specific collections
    match /users/{userId} {
      // Users can read and write to their own transactions
      match /transactions/{docId} {
        allow read, write: if isOwner(userId);
      }

      // Users can read and write to their own categories
      match /categories/{docId} {
        allow read, write: if isOwner(userId);
      }
      
      // Allow user document itself (for profile/metadata if needed)
      allow read, write: if isOwner(userId);
    }
  }
}
